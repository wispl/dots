#!/usr/bin/env bash

# Focus a progam if it exists, otherwise run it.
# This is mainly for applications in the scratchpad so I
# can fit more in there.
#
# progam: name of the executable
# app_id: app_id of the program

program=$1
app_id=$2
# use pretty output since everything needed is on one line
line=$(grep "$app_id" <(swaymsg -t get_tree --pretty))

if [[ -n "$line" ]]; then
	swaymsg [app_id="${app_id}"] focus
else
	$1
	swaymsg [app_id="${app_id}"] focus
fi

