# sources environment variables
include /etc/sway/config.d/*

### Variables
set {
    $mod Mod4
    # Movement keys
    $left h
    $down j
    $up k
    $right l
    # Terminal emulator
    $term foot
    # Application launcher
    $menu rofi -show
    # Wallpaper
    $wallpaper ~/pictures/wallpapers/hk_room.png
    # Colors
    $bg        #181616
    $fg        #c5c9c5
    $border    #282727
    $inactive  #1d1c19
    $urgent    #c4746e
}

### Input configuration
input type:touchpad {
    dwt disabled
    tap enabled
    middle_emulation enabled
    pointer_accel 0.5
}

input type:keyboard {
    repeat_delay 200
    # caps lock to ctrl
    xkb_options ctrl:nocaps
}

### Output configuration
# Wallpaper
output * bg $wallpaper fill

### Key bindings

# Dangerous stuff
bindsym {
    # Kill focused window
    $mod+q kill
    # Restart sway
    $mod+Shift+r restart
    # Reload configuration file
    $mod+Shift+c reload
    # Exit sway and Wayland session
    $mod+Shift+e exec swaymsg exit
}

# Movement
bindsym {
    $mod+$left focus left
    $mod+$down focus down
    $mod+$up focus up
    $mod+$right focus right
}
# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
floating_modifier $mod normal

# Workspaces
bindsym {
    # Switch to workspace
    $mod+1 workspace number 1
    $mod+2 workspace number 2
    $mod+3 workspace number 3
    $mod+4 workspace number 4
    $mod+5 workspace number 5
    $mod+6 workspace number 6
    $mod+7 workspace number 7
    $mod+8 workspace number 8

    # Move focused container to workspace
    $mod+Shift+1 move container to workspace number 1
    $mod+Shift+2 move container to workspace number 2
    $mod+Shift+3 move container to workspace number 3
    $mod+Shift+4 move container to workspace number 4
    $mod+Shift+5 move container to workspace number 5
    $mod+Shift+6 move container to workspace number 6
    $mod+Shift+7 move container to workspace number 7
    $mod+Shift+8 move container to workspace number 8

    # Alternate between workspaces
    $mod+Tab workspace back_and_forth
}

# Layout
bindsym {
    # Horizontal and vertical splits
    $mod+y splith
    $mod+x splitv

    # Switch the current container between different layout styles
    $mod+comma layout stacking
    $mod+period layout tabbed
    $mod+slash layout toggle split

    # Make the curent focus fullscreen
    $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    $mod+Shift+space floating toggle
}

# Focus
bindsym {
    # Swap focus between the tiling area and the floating area
    $mod+space focus mode_toggle

    # Move focus to the parent container
    $mod+a focus parent
}

# Resizing
mode "resize" {
    # Resize
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Scratchpad
bindsym {
    # Move the currently focused window to the scratchpad
    $mod+Shift+s move scratchpad

    # Show windows from scratchpad
    $mod+s scratchpad show
}

# Utility
bindsym {
    # Audio
    XF86AudioRaiseVolume exec wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+
    XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
    XF86AudioMute 	 exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
    XF86AudioMicMute     exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

    # Brightness
    XF86MonBrightnessDown exec brightnessctl set 5%-
    XF86MonBrightnessUp   exec brightnessctl set +5%

    # Screenshots
    Print 	exec ~/bin/grimshot --notify save active
    Shift+Print exec ~/bin/grimshot --notify save area

    # Notification
    $mod+n exec makoctl dismiss
    # Screenlock
    $mod+shift+l exec swaylock -f -i "$wallpaper"
}

# Applications
bindsym {
    # Terminal
    $mod+Return exec $term
    # Launcher
    $mod+d exec $menu

    # Browser
    $mod+b exec firefox
    # Password manager
    $mod+p exec ~/bin/rairun keepassxc "org.keepassxc.KeePassXC"
    # Dropdown terminal
    $mod+semicolon exec ~/bin/rairun '$term -a dropterm' dropterm

    # Notes
    $mod+i exec ~/bin/noteshow
}

### Theme
# Borders and gaps
default_border pixel 4
gaps inner 8
gaps outer 0

# Window colors
# class                  border     bg   fg   indicator  child_border
client.focused           $border    $bg  $fg  $border    $border
client.focused_inactive  $inactive  $bg  $fg  $inactive  $inactive
client.unfocused         $inactive  $bg  $fg  $inactive  $inactive
client.urgent            $urgent    $bg  $fg  $urgent    $urgent

# Status Bar
bar {
    swaybar_command waybar
}

### Window Rules

# Scratch Terminal
for_window [app_id="dropterm"] {
    floating enable
    resize set 90ppt 50ppt, move position 5ppt -8px
    # move container to scratchpad
    # scratchpad show
}

for_window [app_id="org.keepassxc.KeePassXC"] {
    floating enable
}

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [window_role="About"] floating enable
for_window [title="Save File"] floating enable
for_window [title="Picture in picture"] floating enable, sticky enable

for_window [app_id="firefox"] inhibit_idle fullscreen

### Start up
# Notification
exec mako

# Idle configuration
# Lock after 300 seconds of inactivity, power off after another 30 seconds.
# Turn screen on when resumed and lock when sleeping.
exec swayidle -w \
    timeout 300 'swaylock -f -i "$wallpaper"' \
    timeout 330 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -i "$wallpaper"'
